      }
    },
    "host": "localhost:41200",
    "basePath": "/",
    "tags": [
      {
        "name": "Starwars API Endpoints",
        "description": "API para acesso aos dados de Starwars, m√≥dulo Planetas"
      }
    ],
    "schemes": ["http"],
    "consumes": ["application/json"],
    "produces": ["application/json"],
    
    "paths": {
        "/getPlanetsData": {
        "get": {
            "tags": ["AllPlanetsData"],
            "summary": "Get all planets in a API",
            "responses": {
            "200": {
                "description": "OK"
            },
            "500": {
                "description": "Error in the server"
            }
            }
        }
        },



        "/getPlanetsData/{id}": {
        "get": {
            "tags": ["PlanetsData"],
            "summary": "Get a planet by id",
            "parameters": [
            {
                "name": "id",
                "in": "path",
                "description": "Planet id",
                "required": true,
                "type": "string"
            }
            ],
            "responses": {
            "200": {
                "description": "OK",
                "schema": {
                    "$ref": "#/definitions/Planet"
                  }
            },
            "400": {
                "description": "Planet Id is not valid"
            },
            "404": {
                "description": "Planet not found"
            }
            }
        }
        }

    },
